# Simon AI Agent Studio - Environment Configuration
# Kopyalayın: cp .env.example .env
# UYARI: .env dosyasını asla commit etmeyin!

# ============================================================
# GENEL AYARLAR
# ============================================================
NODE_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-me-in-production

# ============================================================
# AI PROVIDER API KEYS
# ============================================================
# Anthropic Claude
CLAUDE_API_KEY=sk-ant-api03-xxxxx

# OpenAI
OPENAI_API_KEY=sk-xxxxx

# Google Gemini
GOOGLE_API_KEY=xxxxx

# xAI Grok (opsiyonel)
XAI_API_KEY=xxxxx

# ============================================================
# LiteLLM GATEWAY
# ============================================================
LITELLM_MASTER_KEY=sk-1234
LITELLM_URL=http://litellm:4000

# ============================================================
# DATABASE
# ============================================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/simon_ai
REDIS_URL=redis://redis:6379/0

# ============================================================
# CELERY (UI Runner)
# ============================================================
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ============================================================
# EGRESS PROXY
# ============================================================
HTTP_PROXY=http://egress-proxy:3128
HTTPS_PROXY=http://egress-proxy:3128
NO_PROXY=localhost,127.0.0.1,postgres,redis,litellm

# ============================================================
# ADMIN DASHBOARD
# ============================================================
ADMIN_SECRET=admin-secret-key-change-me

# ============================================================
# OBSERVABILITY (Opsiyonel)
# ============================================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# ============================================================
# FREE+ KEY POOL (Sponsorlu Modlar)
# ============================================================
FREE_PLUS_ENABLED=false
FREE_PLUS_DAILY_BUDGET=10.00
FREE_PLUS_RATE_LIMIT_PER_HOUR=100

# ============================================================
# SECURITY
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1
SESSION_TIMEOUT_MINUTES=15

# ============================================================
# COST & BUDGET
# ============================================================
DEFAULT_MONTHLY_BUDGET=100.00
COST_ALERT_THRESHOLD=0.8
ENABLE_BUDGET_ENFORCEMENT=true

# ============================================================
# APPROVAL GATES
# ============================================================
HIGH_RISK_APPROVAL_TIMEOUT_MINUTES=5
AUTO_APPROVE_LOW_RISK=true
REQUIRE_ADMIN_FOR_PRODUCTION_DEPLOY=true
