version: '3.9'

services:
  # L1: Orchestrator (FastAPI)
  orchestrator:
    build:
      context: ./apps/api
      dockerfile: Dockerfile
    container_name: simon-orchestrator
    ports:
      - "8000:8000"
    environment:
      - DATABASE_URL=postgresql://postgres:postgres@postgres:5432/simon_ai
      - REDIS_URL=redis://redis:6379/0
      - LITELLM_URL=http://litellm:4000
      - EGRESS_PROXY=http://egress-proxy:3128
      - SECRET_KEY=${SECRET_KEY:-change-me-in-production}
      - CLAUDE_API_KEY=${CLAUDE_API_KEY}
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - GOOGLE_API_KEY=${GOOGLE_API_KEY}
    depends_on:
      - postgres
      - redis
      - litellm
    networks:
      - simon-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # L2: LiteLLM Gateway
  litellm:
    image: ghcr.io/berriai/litellm:main-latest
    container_name: simon-litellm
    ports:
      - "4000:4000"
    environment:
      - REDIS_URL=redis://redis:6379/1
      - DATABASE_URL=postgresql://postgres:postgres@postgres:5432/litellm
      - LITELLM_MASTER_KEY=${LITELLM_MASTER_KEY:-sk-1234}
    volumes:
      - ./infra/docker/litellm-config.yaml:/app/config.yaml
    depends_on:
      - redis
      - postgres
    networks:
      - simon-network
    restart: unless-stopped
    command: ["--config", "/app/config.yaml", "--port", "4000"]

  # L3: UI Runner (Celery Worker with Playwright)
  ui-runner:
    build:
      context: ./services/ui-runner
      dockerfile: Dockerfile
    container_name: simon-ui-runner
    environment:
      - CELERY_BROKER_URL=redis://redis:6379/2
      - CELERY_RESULT_BACKEND=redis://redis:6379/2
      - ORCHESTRATOR_URL=http://orchestrator:8000
      - HTTP_PROXY=http://egress-proxy:3128
      - HTTPS_PROXY=http://egress-proxy:3128
      - PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
    depends_on:
      - redis
      - egress-proxy
    networks:
      - simon-network
    restart: unless-stopped
    deploy:
      replicas: 2

  # L4: Egress Proxy (Squid)
  egress-proxy:
    build:
      context: ./services/egress-proxy
      dockerfile: Dockerfile
    container_name: simon-egress-proxy
    ports:
      - "3128:3128"
    volumes:
      - ./services/egress-proxy/squid.conf:/etc/squid/squid.conf:ro
      - ./services/egress-proxy/allowlist.txt:/etc/squid/allowlist.txt:ro
      - squid-logs:/var/log/squid
    networks:
      - simon-network
    restart: unless-stopped

  # L6: Telemetry (PostgreSQL + Redis for metrics)
  postgres:
    image: postgres:16-alpine
    container_name: simon-postgres
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=simon_ai
    volumes:
      - postgres-data:/var/lib/postgresql/data
      - ./infra/docker/init-db.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - simon-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: simon-redis
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    networks:
      - simon-network
    restart: unless-stopped
    command: redis-server --appendonly yes
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Frontend: Next.js Web App
  web:
    build:
      context: ./apps/web
      dockerfile: Dockerfile
      target: production
    container_name: simon-web
    ports:
      - "3000:3000"
    environment:
      - NEXT_PUBLIC_API_URL=http://localhost:8000
      - NEXT_PUBLIC_WS_URL=ws://localhost:8000
    depends_on:
      - orchestrator
    networks:
      - simon-network
    restart: unless-stopped

  # Admin Dashboard (Opsiyonel)
  admin:
    build:
      context: ./apps/admin
      dockerfile: Dockerfile
      target: production
    container_name: simon-admin
    ports:
      - "3001:3000"
    environment:
      - NEXT_PUBLIC_API_URL=http://localhost:8000
      - ADMIN_SECRET=${ADMIN_SECRET:-admin-secret-key}
    depends_on:
      - orchestrator
    networks:
      - simon-network
    restart: unless-stopped
    profiles:
      - admin

networks:
  simon-network:
    driver: bridge

volumes:
  postgres-data:
  redis-data:
  squid-logs:
